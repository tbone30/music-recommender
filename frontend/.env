# Spotify Discovery Platform - Frontend Environment Variables

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_API_TIMEOUT=10000

# Spotify Configuration
REACT_APP_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
REACT_APP_SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback
REACT_APP_SPOTIFY_SCOPES=user-read-private,user-read-email,playlist-read-private,playlist-modify-public,playlist-modify-private,user-top-read,user-read-recently-played

# Application Configuration
REACT_APP_APP_NAME=Spotify Discovery Platform
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_RECOMMENDATIONS=true
REACT_APP_ENABLE_SOCIAL_FEATURES=true

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_MAX_RECOMMENDATIONS=50
REACT_APP_DEBOUNCE_DELAY=300

# Cache Configuration
REACT_APP_CACHE_DURATION=300000
REACT_APP_LOCAL_STORAGE_PREFIX=spotify_discovery_
